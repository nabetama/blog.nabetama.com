{
	"$schema": "https://biomejs.dev/schemas/1.5.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"ignore": [],
		"indentStyle": "space",
		"lineWidth": 120
	},
	"json": {
		"parser": {
			"allowComments": true
		},
		"formatter": {
			"enabled": true,
			"indentStyle": "space",
			"indentWidth": 2,
			"lineWidth": 100
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "single",
			"jsxQuoteStyle": "double",
			"trailingComma": "all",
			"semicolons": "asNeeded",
			"arrowParentheses": "always",
			"indentStyle": "space",
			"indentWidth": 2,
			"lineWidth": 100,
			"quoteProperties": "asNeeded"
		}
	},
	"files": {
		"include": [
			"scripts/**/*.ts",
			"components/**/*.tsx",
			"app/**/*.tsx",
			"app/**/*.ts"
		],
		"ignore": [
			"node_modules",
			"dist",
			"build",
			"out",
			"public",
			".next",
			".vercel",
			".git",
			".github",
			".vscode",
			".idea",
			".DS_Store",
			"*.log",
			"*.lock",
			"*.swp",
			"*.swo",
			"*.out",
			"*.pid",
			"*.pid.lock",
			"*.seed"
		]
	}
}